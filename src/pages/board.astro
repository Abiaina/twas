---
import BaseLayout    from '@layouts/BaseLayout.astro';
import T             from '@components/T.astro';
import { boardMembers } from '@data/board';
---

<BaseLayout title="Board" activePage="/board">

  <div class="page-header">
    <p class="ph-crumb"><a href="/">Home</a> / <T en="Board" ti="ቦርድ" /></p>
    <h1><T en="Our Board" ti="ቦርዳና" /></h1>
    <p><T en="Meet the dedicated women leading TWAS." ti="TWAS ዝመርሓ ርዑዳት ደቀ-ኣንስትዮ ተፈልጡ።" /></p>
  </div>

  <section class="section">
    <div class="container">

      <div class="section-header fade">
        <h2><T en="Board of Directors" ti="ቦርድ ዳይረክተራት" /></h2>
        <div class="eth-stripe"></div>
        <p class="sub">
          <T
            en="Our board members bring diverse backgrounds and a shared passion for uplifting the Tigrayan community in Seattle."
            ti="ኣባላት ቦርዳና ዝተፈላለየ ጀርባ ሒዞም ናይ ሕብረተሰብ ትግራይ ኣብ ሲያትл ምልዓል ሓባራዊ ድሌት ኣለዎም።"
          />
        </p>
      </div>

      <div class="board-grid">
        {boardMembers.map((member, i) => (
          <div class={`board-card fade fd${Math.min((i % 3) + 1, 3)}`}>
            <div class="board-avatar" aria-hidden="true">
              {member.photo
                ? <img src={member.photo} alt={member.name} loading="lazy" />
                : member.initials
              }
            </div>
            <h3>{member.name}</h3>
            <div class="role">{member.role}</div>
            <p>{member.bio}</p>
          </div>
        ))}
      </div>

    </div>
  </section>

  <section class="section section-alt" style="text-align:center;">
    <div class="container">
      <h2 style="font-family:var(--font-head); color:var(--sea-blue); margin-bottom:1rem;" class="fade">
        <T en="Interested in Getting Involved?" ti="ክትሳተፍ ድሌት ኣለካ?" />
      </h2>
      <p style="color:var(--muted); max-width:480px; margin:0 auto 2rem;" class="fade fd1">
        <span class="en">TWAS welcomes volunteers and community supporters. Contact us to learn about current opportunities.</span>
        <span class="ti" lang="ti">TWAS ወለንተኛታትን ደገፍቲ ሕብረተሰብን ትቅበል። ብዛዕባ ዘለዋ ዕድላት ፍለጡ ርኸቡና።</span>
      </p>
      <a href="/contact" class="btn btn-blue fade fd2">
        <T en="Contact Us" ti="ርኸቡና" />
      </a>
    </div>
  </section>

</BaseLayout>
